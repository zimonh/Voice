{
	"manifest_version" :  2,
	"name" :  "Voice Commands",
	"version" :  "0.1",
	"description" :  "Use your voice to trigger browser actions.",
	"options_page" :  "index.html",
	"icons": {
		"16"  : "mic_16.png",
		"48"  : "mic_48.png",
		"128" : "mic_128.png"
	},
	"permissions" :  ["tabs"],
	"browser_action": {
		"default_icon"  : "mic_16.png",
		"default_popup" : "index.html",
		"default_title" : "Listen!"
	}
}
